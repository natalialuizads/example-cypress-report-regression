{
  "name": "example-cypress-report-regression",
  "version": "1.0.0",
  "description": "Multi-application project with Cypress, Docusaurus, Angular Web Components, and Node.js API",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headed": "cypress run --headed",
    "docs:install": "cd docs && npm install",
    "docs:start": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "api:install": "cd api && npm install",
    "api:start": "cd api && npm start",
    "api:dev": "cd api && npm run dev",
    "wc:install": "cd web-components && npm install",
    "wc:start": "cd web-components && npm start",
    "wc:build": "cd web-components && npm run build",
    "install:all": "npm install && npm run docs:install && npm run api:install && npm run wc:install",
    "start:all": "concurrently \"npm run api:dev\" \"npm run wc:start\" \"npm run docs:start\"",
    "test": "node cypress/scripts/runner.js",
    "test:ci": "start-server-and-test \"npm run api:dev\" http://localhost:3001 \"npm run wc:start\" http://localhost:4200 \"npm run test\""
  },
  "keywords": [
    "cypress",
    "testing",
    "e2e",
    "docusaurus",
    "documentation",
    "angular",
    "web-components",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.2",
    "cypress-multi-reporters": "^2.0.5",
    "start-server-and-test": "^2.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
